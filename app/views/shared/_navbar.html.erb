<div class="navbar-miss-cocktail">
  <!-- Logo -->
  <a href="/" class="navbar-miss-cocktail-brand">
    <%= image_tag "cocktail.png"%>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-miss-cocktail-right hidden-xs hidden-sm">
    <%= link_to new_cocktail_path do %>
      <span class="navbar-miss-cocktail-item navbar-miss-cocktail-button btn">Add a cocktail</span>
    <% end %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-miss-cocktail-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-miss-cocktail-dropdown-menu">
        <li>
          <%= link_to cocktails_path do %>
            <span class="navbar-miss-cocktail-item navbar-miss-cocktail-button btn">Add a cocktail</span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
