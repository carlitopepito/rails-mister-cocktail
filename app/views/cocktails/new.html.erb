<div class="container">
  <div class="row col-xs-12 col-sm-8 col-sm-offset-2">
    <%= simple_form_for (@cocktail) do |f| %>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Add a cocktail", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
