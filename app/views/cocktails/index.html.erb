<h1 class='text-center index-title'>Miss Cocktails</h1>
  <div class="container">
    <h2>All my cocktails</h2>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="cols-xs-12 col-sm-6 col-md-4">
          <div class="card">
            <% unless cocktail.photo.url.nil? %>
              <div class="card-picture" style="background-image: url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>');">
              </div>
            <% end %>

            <div class="card-name">
              <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<br>

