<h1>Miss Cocktails</h1>

<h2>All my cocktails</h2>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="cols-xs-12 col-sm-6 col-md-4">
          <div class="card">
            <div class="card-name">
              <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<br>
<%= link_to 'New cocktail', new_cocktail_path %>



